package quicksort;


public class Quicksort {
	
	public static void sort(int[] numbers, int startIndex, int endIndex, int pivotIndex){
		if(numbers.length > 1){
			pivotIndex = partition(numbers, pivotIndex);
			sort(numbers,0,pivotIndex-1, 0);
			sort(numbers, pivotIndex+1, numbers.length, pivotIndex+1);
			
		}
	}
	
	private static int partition(int[] numbers, int pIndex){
		int pivot = numbers[pIndex];
		int i = 1;
		for(int j = 1; j< numbers.length ; j++){
			if(numbers[j] < pivot){//else numbers[j]>pivot so just increment j
				//swap with leftmost element of right(graeter than pivot) array
				int temp = numbers[i];
				numbers[i] = numbers[j];
				numbers[j] = temp;
				i++;
			}
		}
		//swap pivot rightmost element of left(less than pivot) array
		int temp = pivot;
		pivot = numbers[i-1];
		numbers[i-1] = temp;
		return i-1;
	}
	

}
