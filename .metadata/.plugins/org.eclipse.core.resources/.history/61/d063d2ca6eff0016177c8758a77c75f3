package mergesort;

import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class Main {

		public static void main(String args[]){
				System.out.println("The first argument is the input file path, currently it is" + args[0]);
			try{
				Path inputFilePath = Paths.get(args[0]);
				byte[] fileBuffer = Files.readAllBytes(inputFilePath);
				System.out.println(fileBuffer.toString());
			
			}
			
			
			
		}
}
