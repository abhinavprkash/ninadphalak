package mergesort;

import java.util.ArrayList;

public class MergeSort {
	
	public static int[] mergesort(int[] numList){
		internalMergeSort(numList,0,numList.length);

	}
	
	private int[] internalMergeSort(int[] numList, int startIndex, int endIndex){
		if(startIndex = endIndex) return numList;
		
		int middleIndex = (startIndex + endIndex) / 2;
		int[] leftHalf = internalMergeSort(int[] numList, 0, middleIndex);
		int[] rightHalf = internalMergeSort(int[] numList, middleIndex+1, endIndex);
		
		int[] mergedList = merge(leftHalf,rightHalf);
		
	}
}
